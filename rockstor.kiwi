                <oem-swapsize>2048</oem-swapsize>
                <oem-skip-verify>true</oem-skip-verify>
            </oemconfig>
        </type>
    </preferences>
    <preferences profiles="Leap15.4.ARM64EFI,Leap15.5.ARM64EFI,Tumbleweed.ARM64EFI">
